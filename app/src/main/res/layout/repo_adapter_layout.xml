<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.thomsonreuters.rippledecoratorview.RippleDecoratorView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rdv_rippleColor="@android:color/holo_blue_dark"
        app:rdv_rippleAnimationPeakFrame="15"
        app:rdv_rippleAnimationDuration="600">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:id="@+id/repo_adapter_layout_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_weight="1"
                android:id="@+id/repo_adapter_layout_description"/>

        </LinearLayout>
    </com.thomsonreuters.rippledecoratorview.RippleDecoratorView>

</RelativeLayout>